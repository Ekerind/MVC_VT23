{% extends "base.html.twig" %}

{% block title %}Dra ett kort{% endblock %}

{% block body %}
<h1>Dra ett kort</h1>

<p>Det finns {{ count }} kort kvar i kortleken.</p>

{% for card in draw %}
    <p class="graphics">{{ card|raw }}</p>
{% endfor %}

<div>
    <p>
        <a href="{{ path('card_index') }}">Tillbaka</a> |
        <a href="{{ path('draw_single') }}">Dra ett kort till</a>
    </p>
</div>

{% endblock %}